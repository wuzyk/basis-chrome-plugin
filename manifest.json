{
  "name": "Basis Framework Tools",
  "version": "1.3",
  "description": "Basis developer tools",
  "devtools_page": "devtools.html",
  "manifest_version": 2,
  "permissions":  [
    "tabs",
    "contextMenus", 
    "http://*/*",
    "https://*/*"
  ],
  "background": { "scripts": ["background.js"] },
  "icons": {
    "32": "icon32x32.png",
    "128": "icon128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["content.js"]
    }
  ]
}
